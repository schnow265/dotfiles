{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#7E46B6",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "in ",
          "type": "text"
        },
        {
          "foreground": "#87FF00",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#D75F00",
          "style": "plain",
          "template": "Î» ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
